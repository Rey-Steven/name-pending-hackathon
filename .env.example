# Backend API Configuration
PORT=3001

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Firebase
FIREBASE_SERVICE_ACCOUNT=your_firebase_service_account_json_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here

# Gmail SMTP + IMAP (for sending and reading emails)
# Generate App Password at: https://myaccount.google.com/apppasswords
GMAIL_USER=your_gmail_address_here
GMAIL_APP_PASSWORD=16-character_app_password_here

# SerpAPI (Google search for market research)
SERPAPI_API_KEY=your_serpapi_key_here

# OpenAI (DALL-E 3 image generation)
OPENAI_API_KEY=your_openai_api_key_here

# Cloudflare R2 Object Storage
R2_ACCOUNT_ID=your_cloudflare_account_id_here
R2_API_TOKEN=your_cloudflare_api_token_here
R2_BUCKET_NAME=your_r2_bucket_name_here
R2_PUBLIC_URL=https://your_r2_bucket_name_here.r2.cloudflarestorage.com

# Elorus API (demo mode sends X-Elorus-Demo header to prevent changes on production company/data)
ELORUS_DEMO=true